{
  "manifest_version": 3,
  "name": "Paragon Integration Helper",
  "version": "1.0",
  "description": "Access Paragon's integration document easily.",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "48": "assets/icons/logo48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
